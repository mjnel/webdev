<% include ../partials/header %>

<div class = "ui main text container segment">


 <form class= "ui form" action = "/campgrounds/<%= campground._id %>?_method=PUT" method="POST">

    <div class ="ui huge header">Edit <%= campground.name %> Blog</div>

     <div class = "field">
     <label>Title</label>
    <input type = "text" name = "campground[name]" value = "<%= campground.name %>">
     </div>

     <div class ="field">
     <label>Image </label>
     <input type = "text" name = "campground[image]" value = "<%= campground.image %>">
     </div>
     
     
     <div class ="field">
     <label>Description</label>
        <textarea name = "campground[description]">
         <%= campground.description %>
         </textarea>
     </div> 
         
 
     
     <button class ="ui red inverted big button" type = submit>Submit</button>


 </form>



</div>

<% include ../partials/footer %>